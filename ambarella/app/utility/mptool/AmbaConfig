config BUILD_AMBARELLA_ORYX_MPTOOL
  bool "Build Ambarella MPtool Server"
  select BUILD_AMBAREALLA_APP_UTILITY_UPGRADE
  select BUILD_AMBARELLA_UNIT_TESTS_CALIBRATION
  default n
  depends on BUILD_AMBARELLA_APPLICATION
  help
    Build Ambarella MPtool Server.

##config BUILD_AMBARELLA_MPTOOL_AUTORUN_FLAG_FILE
##  bool "Build mptool autorun flag file"
##  default n
##  depends on BUILD_AMBARELLA_ORYX_MPTOOL
##  help
##    It will generate a flag file in /etc/mptool/autorun,
##    which indicates if mptool will autorun.
