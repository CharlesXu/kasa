config BUILD_AMBAREALLA_APP_UTILITY_UPGRADE
	bool "Build Ambarella upgrade partition"
	default n
	help
		Build ambarella upgrade partition

choice
	prompt "Upgrade partition tool"
	default BUILD_UPGRADE_FOR_3_10
	depends on BUILD_AMBAREALLA_APP_UTILITY_UPGRADE
	help
		Build ambarella upgrade partition.

config BUILD_UPGRADE_FOR_3_10
	bool "Build for Kernel 3.10"
	help
		Build ambarella upgrade partition for 3.10

config BUILD_UPGRADE_FOR_3_8
	bool "Build for Kernel 3.8"
	help
		Build ambarella upgrade partition for 3.8

endchoice
